@page "{id?}"
@model IndexModel
@{
    ViewData["Title"] = "Login";
    var id = RouteData.Values["id"] is null ? -99 : Int32.Parse(RouteData.Values["id"].ToString());
}

@if (id == 1)
{
    <div class="alert alert-danger">
        <strong>Error!</strong>Incorrect email or password.
    </div>
} else if (id == 2)
{
    <div class="alert alert-success">
        User sucessfully created.
    </div>
}

<div class="container" style="max-width: 450px">
    <h4>Sign In</h4>
    <div class="row">
        <div class="col-sm">
            <form method="post">
                <div class="form-group">
                    <label for="email" asp-for="user.userEmail">Email</label>
                    <input asp-for="user.userEmail" type="email" class="form-control" id="email">
                </div>
                <div class="form-group">
                    <label for="pwd" asp-for="user.password">Password</label>
                    <input asp-for="user.password" type="password" class="form-control" id="pwd">
                </div>
                <button type="submit" class="btn btn-success">Login</button>
                <div style="margin-top: 20px;">
                    Don't have an account? <a href="@Routes.REGISTER">Sign Up</a>
                </div>
            </form>
        </div>
    </div>
</div>
