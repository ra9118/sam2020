@page "{id?}"
@model IndexModel
@{
    ViewData["Title"] = "Login";
    var id = RouteData.Values["id"] is null ? -99 : Int32.Parse(RouteData.Values["id"].ToString());
}

@if (id == 1)
{

    <div class="alert alert-danger">
        <strong>Error!</strong> User name or password isnot correct.
    </div>

}else if (id == 2)
{

    <div class="alert alert-success">
        <strong>Wow!</strong> User created sucessfully  you can login in the portal now.
    </div>

}


<div style="padding-left:20%;padding-right:20%">

    <form method="post">
        <div class="form-group">
            <label for="email" asp-for="user.userEmail"> </label>
            <input asp-for="user.userEmail" type="email" class="form-control" id="email">
        </div>
        <div class="form-group">
            <label for="pwd" asp-for="user.password"> </label>
            <input asp-for="user.password" type="password" class="form-control" id="pwd">
        </div>
        <div class="checkbox">
            <label><input type="checkbox"> Remember me</label>
        </div>

        <button type="submit" class="btn btn-success">Login</button>

        <br />
        <br />
        <br />
        <a href="/Register"> Sign Up </a>
    </form>

</div>