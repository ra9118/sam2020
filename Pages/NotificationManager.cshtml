@page "{id?}"
@model SAM2020.Pages.NotificationManagerModel
@{
    ViewData["Title"] = "NotificationManager";
    var id = RouteData.Values["id"] is null ? -99 : long.Parse(RouteData.Values["id"].ToString());
}

<h3>Notification Manager</h3>

@if (id == 0)
{

<div class="alert alert-danger">
    <strong>Error!</strong> Cannot send  Notification. Try Again
</div>

}
else if (id == 1)
{

<div class="alert alert-success">
    <strong>Cool!</strong> Notification is sent.
</div>

}
else if (id == 2)
{

<div class="alert alert-warning">
    <strong>Warning!</strong> There is no users has the rule that you select no one will recive the Notification.
</div>

}

<div style="padding-left:20%;padding-right:20%">

    <form method="post">
        <div class="form-group">
            <label for="email" asp-for="notification.message"> </label>
            <br />
            @Html.TextArea("notification.message", new { rows = 5, columns = 60, @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="pwd" asp-for="notification.userRole"> </label>

            @{
                List<SelectListItem> InvoiceStatusDD = new List<SelectListItem>();
                InvoiceStatusDD.Add(new SelectListItem { Value = "2", Text = "Authors" });
                InvoiceStatusDD.Add(new SelectListItem { Value = "3", Text = "PCCs", Selected = true });
                InvoiceStatusDD.Add(new SelectListItem { Value = "4", Text = "PCMs" });
            }

            @Html.DropDownList("notification.userRole", InvoiceStatusDD, new { @class = "form-control" })
        </div>


        <button type="submit" class="btn btn-success">Send</button>

        <br />
        <br />
        <br />

    </form>

</div>